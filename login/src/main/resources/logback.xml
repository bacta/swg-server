<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <appender name="ConnectionLogger" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>connection</key>
            <defaultValue>unknown</defaultValue>
        </discriminator>
        <sift>
            <appender name="${connection}" class="ch.qos.logback.core.FileAppender">
                <file>logs/login/connection/${connection}.log</file>
                <layout class="ch.qos.logback.classic.PatternLayout">
                    <pattern>%X{sendType} %msg%n</pattern>
                </layout>
            </appender>
        </sift>

    </appender>

    <logger name="io.bacta.soe.network.connection.interceptor.MessageLoggingInterceptor" level="INFO" additivity="false">
        <appender-ref ref="ConnectionLogger" />
    </logger>

    <root level="INFO">
        <appender-ref ref="ConnectionLogger" />
    </root>

</configuration>